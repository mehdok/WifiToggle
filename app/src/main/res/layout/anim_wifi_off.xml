<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:measureAllChildren="true"
             android:flipInterval="100"
             android:autoStart="true"
             android:inAnimation="@android:anim/fade_in"
             android:outAnimation="@android:anim/fade_out"
             android:animateFirstView="true"
             android:background="@drawable/background"
             android:id="@+id/animLayout"
             android:padding="8dp">

    <ImageView
        android:id="@+id/profileImage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wifi_state_4"/>
    <ImageView
        android:id="@+id/profileImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wifi_state_3"/>
    <ImageView
        android:id="@+id/profileImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wifi_state_2"/>
    <ImageView
        android:id="@+id/profileImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wifi_state_1"/>

</ViewFlipper>